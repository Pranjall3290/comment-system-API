modules = ["python-3.12", "nodejs-20", "web"]
compile = "make"
run = "run"

[nix]
channel = "stable-25_05"

[deployment]
build = ["sh", "-c", "make"]
run = ["sh", "-c", "run"]

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
author = 43486255
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[ports]]
localPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
